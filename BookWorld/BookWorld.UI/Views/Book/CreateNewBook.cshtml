@using BookWorld.Application.DTOs
@model CreateBookDto

@{
    ViewData["Title"] = "Kitap Ekle";
    var categories = ViewBag.Categories as List<CategoryDto> ?? new List<CategoryDto>();
    var authors = ViewBag.Authors as List<AuthorDto> ?? new List<AuthorDto>();
}

<div class="container mt-4">
    <h2 class="mb-3">📘 Yeni Kitap Ekle</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="CreateNewBook" method="post">

        <div class="mb-3">
            <label class="form-label">Kitap Adı</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">ISBN</label>
            <input asp-for="ISBN" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Fiyat</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Stok</label>
            <input asp-for="Stock" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Resim URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Yazar</label>
            <select asp-for="AuthorId" class="form-select" required>
                <option value="">Yazar Seçiniz</option>
                @foreach (var author in authors)
                {
                    <option value="@author.Id">@author.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-select" required>
                <option value="">Kategori Seçiniz</option>

                @foreach (var category in categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-success">
             Kaydet
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            İptal
        </a>
    </form>
</div>
