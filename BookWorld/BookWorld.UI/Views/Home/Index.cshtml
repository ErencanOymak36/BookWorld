@using BookWorld.Application.DTOs
@model List<BookDto>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<div class="container mt-4">
    <h2 class="mb-3">📚 Kitap Listesi</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Kitap Adı</th>
                <th>Yazar</th>
                <th>Fiyat</th>
                <th>İşlemler</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>@book.AuthorName</td>
                        <td>@book.Price ₺</td>
                        <td>
                            <a asp-controller="Order"asp-action="CreateNewOrder"asp-route-bookId="@book.Id"class="btn btn-primary btn-sm">Satın Al</a>
                            <a asp-controller="Rental"asp-action="CreateNewRental"asp-route-bookId="@book.Id"class="btn btn-secondary btn-sm">Kirala</a>
                            <a href="#" class="btn btn-danger">Sil</a>
                           
                        </td>
                       
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">
                        Kayıt bulunamadı
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
