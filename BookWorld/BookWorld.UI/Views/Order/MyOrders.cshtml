@using BookWorld.Application.DTOs
@model List<OrderDto>

@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="container mt-4">
    <h2 class="mb-3">🛒 Satın Aldıklarım</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Henüz siparişiniz bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Sipariş No</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>Toplam Tutar</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>
                            <span class="badge bg-success">@order.OrderDate.ToString("dd.MM.yyyy")</span>
                        </td>
                        @if (order.Status == "Created")
                        {
                            <td>Satın Alındı</td>
                        }
                        else
                        {
                            <td>Satın Alma sırasında Bir sorun yaşanmış.</td>
                        }
                        
                        
                        <td>@order.TotalAmount ₺</td>
                        <td>
                            <button class="btn btn-sm btn-primary"
                                    onclick="showOrderDetails(@order.Id)">
                                Detay
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


<!-- Order Detail Modal -->
<div class="modal fade" id="orderDetailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">📦 Sipariş Detayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div id="orderDetailContent">
                    <div class="text-center">
                        <span class="spinner-border"></span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<script>
    function showOrderDetails(orderId) {

        const modalElement = document.getElementById('orderDetailModal');
        const modal = new bootstrap.Modal(modalElement);
        modal.show();

        const content = document.getElementById("orderDetailContent");
        content.innerHTML = `
            <div class="text-center">
                <span class="spinner-border"></span>
            </div>`;

       fetch(`/Order/OrderDetails?orderId=${orderId}`)
            .then(response => {
                if (!response.ok)
                    throw new Error("API error");
                return response.json();
            })
            .then(items => {

                if (!items || items.length === 0) {
                    content.innerHTML = `
                        <div class="alert alert-info">
                            Sipariş detayı bulunamadı
                        </div>`;
                    return;
                }

                let total = 0;

                let html = `
                    <table class="table table-bordered align-middle">
                        <thead class="table-success">
                            <tr>
                                <th>Kitap</th>
                                <th>Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                `;

                items.forEach(item => {
                    const rowTotal = item.quantity * item.unitPrice;
                    total += rowTotal;

                    html += `
                        <tr>
                            <td>${item.bookTitle}</td>
                            <td class="text-center">${item.quantity}</td>
                            <td>${item.unitPrice} ₺</td>
                            <td><strong>${rowTotal} ₺</strong></td>
                        </tr>
                    `;
                });

                html += `
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Genel Toplam</th>
                                <th>${total} ₺</th>
                            </tr>
                        </tfoot>
                    </table>
                `;

                content.innerHTML = html;
            })
            .catch(() => {
                content.innerHTML = `
                    <div class="alert alert-danger">
                        Sipariş detayları yüklenirken hata oluştu
                    </div>`;
            });
    }
</script>